{
  "name": "blog-starter",
  "version": "1.0.0",
  "scripts": {
    "dev": "next",
    "build": "next build && next export",
    "start": "next start",
    "lint": "eslint --ext .js,.ts,.tsx lib components pages scripts *.js",
    "lint-fix": "npm run lint -- --fix",
    "prettier": "prettier --write styles _posts components *.md"
  },
  "dependencies": {
    "classnames": "2.2.6",
    "date-fns": "2.16.1",
    "gray-matter": "4.0.2",
    "next": "latest",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "remark": "13.0.0",
    "remark-html": "13.0.1"
  },
  "devDependencies": {
    "@cybozu/eslint-config": "^11.0.3",
    "@types/classnames": "^2.2.11",
    "@types/node": "^14.14.19",
    "@types/react": "^17.0.0",
    "autoprefixer": "10.0.4",
    "eslint": "^7.17.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "postcss": "8.1.10",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "tailwindcss": "2.0.1",
    "typescript": "^4.1.3"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --cache --fix",
    "*.{css,md}": "prettier --write"
  }
